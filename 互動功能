const movies = {
    1: {
        title: "電影名稱 1",
        year: "2024",
        director: "導演 A",
        actors: "演員 A, B, C",
        genre: "科幻 / 動作",
        rating: "8.5/10",
        description: "這是一部精彩的電影...",
        poster: "images/movie1.jpg",
        similar: [
            { title: "相似電影 1", image: "images/movie2.jpg" }
        ]
    }
};

function loadMovieDetails() {
    const urlParams = new URLSearchParams(window.location.search);
    const movieId = urlParams.get("id");
    if (!movies[movieId]) return;

    const movie = movies[movieId];
    document.getElementById("movie-title").innerText = movie.title;
    document.getElementById("movie-year").innerText = movie.year;
    document.getElementById("movie-director").innerText = movie.director;
    document.getElementById("movie-actors").innerText = movie.actors;
    document.getElementById("movie-genre").innerText = movie.genre;
    document.getElementById("movie-rating").innerText = movie.rating;
    document.getElementById("movie-description").innerText = movie.description;
    document.querySelector(".movie-poster").src = movie.poster;
}

document.addEventListener("DOMContentLoaded", loadMovieDetails);
